{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "es2023"
    ],
    "paths": {
      "@rezonate/nestjs-query-core": ["packages/core/src/index.ts"],
      "@rezonate/nestjs-query-graphql": ["packages/query-graphql/src/index.ts"],
      "@rezonate/nestjs-query-mongoose": ["packages/query-mongoose/src/index.ts"],
      "@rezonate/nestjs-query-sequelize": ["packages/query-sequelize/src/index.ts"],
      "@rezonate/nestjs-query-typegoose": ["packages/query-typegoose/src/index.ts"],
      "@rezonate/nestjs-query-typeorm": ["packages/query-typeorm/src/index.ts"],
    }
  }
}
